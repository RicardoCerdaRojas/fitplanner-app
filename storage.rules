rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Logos can be read by anyone, but only written by the gym admin
    match /logos/{gymId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null 
                    && exists(/databases/(default)/documents/gyms/$(gymId)) 
                    && get(/databases/(default)/documents/gyms/$(gymId)).data.adminUid == request.auth.uid;
    }
  }
}
