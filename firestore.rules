rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Default rule for development: Allow read/write access to any signed-in user.
    // This is NOT secure for production but will unblock development.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
    
    // --- Specific exceptions for unauthenticated flows ---

    // Allow user and gym creation for the signup flow.
    match /users/{userId} {
      allow create: if true;
    }

    match /gyms/{gymId} {
        allow create: if true;
    }

    // Allow unauthenticated checks for pending memberships by email on the /join page,
    // and allow creation of pending memberships.
    match /memberships/{membershipId} {
        allow get, create: if true;
    }
  }
}
