rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow a user to create their own user document upon signup.
      // The document must contain only the 'role' field, and the user must be the owner.
      allow create: if request.auth != null && request.auth.uid == userId &&
                       request.resource.data.keys().hasOnly(['role']) &&
                       (request.resource.data.role == 'athlete' || request.resource.data.role == 'coach');
      
      // Allow an authenticated user to read, update, or delete their own document.
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
