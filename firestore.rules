rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to check for a pending membership invitation
    match /memberships/{email} {
      allow get: if true;
      allow list, write: if request.auth != null; // Only authenticated users can list or write
    }

    // Allow authenticated users to manage their own user document
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users of a gym to read/write routines, types, and gym info
    // A more specific rule should be added later to check for gym membership
    match /gyms/{gymId} {
      allow read, write: if request.auth != null;
    }
    
    match /routines/{routineId} {
       allow read, write: if request.auth != null;
    }

    match /routineTypes/{typeId} {
       allow read, write: if request.auth != null;
    }
    
    match /workoutSessions/{sessionId} {
      allow read, write: if request.auth != null;
    }
  }
}
