rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    match /invites/{inviteEmail} {
      // Allow a user to read and delete their own invitation during signup.
      allow read, delete: if request.auth != null && request.auth.token.email == inviteEmail;
    }

    match /gyms/{gymId} {
    	allow create: if request.auth != null
          && getUserData().gymId == null
          && request.resource.data.adminUid == request.auth.uid;
    }

    match /routines/{routineId} {
    	allow create: if request.auth != null && getUserData().role == 'coach';
    }
    
  }
}
