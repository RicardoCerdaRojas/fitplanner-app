
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin of a specific gym
    function isGymAdmin(gymId) {
      return get(/databases/$(database)/documents/memberships/$(request.auth.uid)_$(gymId)).data.role == 'gym-admin';
    }

    // Helper function to check if a user is a coach of a specific gym
    function isGymCoach(gymId) {
      let userRole = get(/databases/$(database)/documents/memberships/$(request.auth.uid)_$(gymId)).data.role;
      return userRole == 'coach' || userRole == 'gym-admin';
    }

    // Helper function to check if a user is a member of a specific gym
    function isGymMember(gymId) {
      return exists(/databases/$(database)/documents/memberships/$(request.auth.uid)_$(gymId));
    }
    
    match /gyms/{gymId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isGymAdmin(gymId);
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth.uid == userId;
    }

    match /memberships/{membershipId} {
        allow read, update: if request.auth.uid == resource.data.userId;
        allow create: if request.auth.uid == request.resource.data.userId;
        allow delete: if isGymAdmin(resource.data.gymId);
    }

    match /invites/{inviteId} {
        allow create, read, delete: if isGymAdmin(request.resource.data.gymId) || isGymAdmin(resource.data.gymId);
    }

    match /routineTypes/{typeId} {
      allow read: if isGymMember(resource.data.gymId);
      allow create, update, delete: if isGymAdmin(resource.data.gymId);
    }

    match /routines/{routineId} {
      allow read: if request.auth.uid == resource.data.athleteId || isGymCoach(resource.data.gymId);
      allow create, update: if isGymCoach(request.resource.data.gymId);
      allow delete: if isGymCoach(resource.data.gymId);
    }
    
    match /workoutSessions/{sessionId} {
      allow read, write, delete: if request.auth.uid == sessionId || isGymAdmin(resource.data.gymId);
    }
  }
}
