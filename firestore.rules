rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin role
    function isGymAdmin(gymId) {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'gym-admin' &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.gymId == gymId;
    }

    // Gyms can be read by anyone, but only created by authenticated users who are not yet part of a gym.
    // Updates are restricted to the gym's admin.
    match /gyms/{gymId} {
      allow read;
      allow create: if request.auth != null && 
                       !exists(/databases/$(database)/documents/users/$(request.auth.uid));
      allow update: if request.auth != null && isGymAdmin(gymId);
    }
    
    // Users can be created during signup. Users can only read/update their own profile.
    // Gym admins can read profiles of users in their gym.
    match /users/{userId} {
      allow create; // Allow user creation during signup
      allow read: if request.auth != null && (request.auth.uid == userId ||
                    (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'gym-admin' &&
                     get(/databases/$(database)/documents/users/$(userId)).data.gymId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.gymId));
      allow update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Invites can only be created and deleted by a gym admin for their own gym.
    // They can be read by the invited user during signup.
    match /invites/{email} {
      allow read: if request.auth != null && request.auth.token.email == email;
      allow create: if request.auth != null && isGymAdmin(request.resource.data.gymId);
      allow delete: if request.auth != null && isGymAdmin(resource.data.gymId);
    }

    // Routines can be created/updated by coaches/admins for their gym.
    // Athletes can only read their own routines and update their progress.
    match /routines/{routineId} {
       allow read, create, update: if request.auth != null && isGymAdmin(request.resource.data.gymId);
       // Athletes can read their own routines
       allow read: if request.auth != null && resource.data.athleteId == request.auth.uid;
       // Athletes can update their own routine progress
       allow update: if request.auth != null && 
                        resource.data.athleteId == request.auth.uid &&
                        request.resource.data.keys().hasOnly(['progress']); 
    }
    
    // Routine Types can be created, read, and updated by a gym admin.
    match /routineTypes/{typeId} {
      allow read;
      allow create, update: if request.auth != null && 
                               isGymAdmin(request.resource.data.gymId);
      allow delete: if request.auth != null &&
                       isGymAdmin(resource.data.gymId);
    }
  }
}
