rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Default minimalist rules for most collections
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
    
    // --- Specific exceptions for unauthenticated/public flows ---

    match /users/{userId} {
       // Allow user creation on signup.
      allow create: if true;
      // ONLY a signed-in user can read or update their own data.
      allow read, update: if isSignedIn() && request.auth.uid == userId;
      // Deletes should still be protected.
      allow delete: if isSignedIn();
    }
    
    // New collection for public email lookups.
    match /userEmails/{email} {
      // Allow anyone to check if a single email document exists.
      allow get: if true;
      // IMPORTANT: Explicitly deny listing the whole collection to prevent enumeration.
      allow list: if false;
      // Allow a user to create their own email record upon signup.
      allow create: if isSignedIn();
    }

    match /gyms/{gymId} {
        // Allow gym creation.
        allow create: if true;
        allow read, update, delete: if isSignedIn();
    }

    match /memberships/{membershipId} {
        // Allow unauthenticated checks for pending memberships by email on the /join page.
        allow get: if true;
        // Allow signed-in users to manage memberships.
        allow list, write: if isSignedIn();
    }
  }
}
